{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"paths": {
			"@/*": ["./src/*"]
		},
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2020"
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
